<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice Copy"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/black">

        </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

    </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/selectInVoiceButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbuttonshape"
                android:text="Select"
                />

            <Button
                android:id="@+id/uploadInVoiceButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbuttonshape"
                android:text="Upload"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Images"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/black">

        </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

    </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/selectMobileButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbuttonshape"
                android:text="Select"
                />

            <Button
                android:id="@+id/uploadMobileButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbuttonshape"
                android:text="Upload"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Images"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/black">

        </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

    </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/selectCustomerButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbuttonshape"
                android:text="Select"
                />

            <Button
                android:id="@+id/uploadCustomerButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:background="@drawable/loginbuttonshape"
                android:text="Upload"
                />

        </LinearLayout>



        <Button
        android:id="@+id/finalImageButton"
        style="@style/loginButton"
        android:text="Ok"
        android:background="@drawable/login_shape_bk"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/loginViewsMargin"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>